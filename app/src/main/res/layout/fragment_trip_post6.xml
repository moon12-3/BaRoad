<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_marginBottom="55dp"
    tools:context=".post.TripPost6">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbars="none">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <Button
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:background="@drawable/back"
                    android:layout_marginTop="42dp"
                    android:layout_marginLeft="20dp"/>
                <Button
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:background="@drawable/heart"
                    android:layout_marginTop="42dp"
                    android:layout_gravity="right"
                    android:layout_marginRight="20dp"/>
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="218dp"
                    android:scaleType="fitXY"
                    android:src="@drawable/post6" />
            </FrameLayout>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="나고야 맛집 100% 즐기기"
                android:textStyle="bold"
                android:textSize="23dp"
                android:textColor="#616161"
                android:layout_marginLeft="20dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="#봄 #여름 #가을 #겨울"
                android:layout_marginLeft="20dp"
                android:textColor="#2196F3"/>
            <FrameLayout
                android:layout_width="370dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="8dp">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/post6_1"
                    android:adjustViewBounds="true"/>
                <HorizontalScrollView
                    android:layout_width="370dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center|top"
                    android:layout_marginTop="20dp"
                    android:layout_marginLeft="25dp"
                    android:scrollbars="none">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <ImageView
                            android:layout_width="214dp"
                            android:layout_height="162dp"
                            android:layout_marginTop="74dp"
                            android:src="@drawable/img6_1" />

                        <ImageView
                            android:layout_width="214dp"
                            android:layout_height="162dp"
                            android:layout_marginLeft="6dp"
                            android:layout_marginTop="74dp"
                            android:src="@drawable/img6_2" />

                        <ImageView
                            android:layout_width="214dp"
                            android:layout_height="162dp"
                            android:layout_marginLeft="6dp"
                            android:layout_marginTop="74dp"
                            android:src="@drawable/img6_3" />

                        <ImageView
                            android:layout_width="214dp"
                            android:layout_height="162dp"
                            android:layout_marginLeft="6dp"
                            android:layout_marginTop="74dp"
                            android:src="@drawable/img6_4" />

                        <ImageView
                            android:layout_width="214dp"
                            android:layout_height="162dp"
                            android:layout_marginLeft="6dp"
                            android:layout_marginTop="74dp"
                            android:src="@drawable/img6_5" />
                    </LinearLayout>
                </HorizontalScrollView>
                <Button
                    android:id="@+id/add_cos1"
                    android:layout_width="312dp"
                    android:layout_height="60dp"
                    android:layout_gravity="center|bottom"
                    android:background="@drawable/addbtn"
                    android:layout_marginBottom="26dp" />
            </FrameLayout>
            <FrameLayout
                android:layout_width="370dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="8dp">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/post6_2"
                    android:adjustViewBounds="true"/>
                <HorizontalScrollView
                    android:layout_width="370dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center|top"
                    android:layout_marginTop="20dp"
                    android:layout_marginLeft="25dp"
                    android:scrollbars="none">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <ImageView
                            android:layout_width="214dp"
                            android:layout_height="162dp"
                            android:layout_marginTop="74dp"
                            android:src="@drawable/img6_6" />

                        <ImageView
                            android:layout_width="214dp"
                            android:layout_height="162dp"
                            android:layout_marginLeft="6dp"
                            android:layout_marginTop="74dp"
                            android:src="@drawable/img6_7" />

                        <ImageView
                            android:layout_width="214dp"
                            android:layout_height="162dp"
                            android:layout_marginLeft="6dp"
                            android:layout_marginTop="74dp"
                            android:src="@drawable/img6_8" />
                        <ImageView
                            android:layout_width="214dp"
                            android:layout_height="162dp"
                            android:layout_marginLeft="6dp"
                            android:layout_marginTop="74dp"
                            android:src="@drawable/img6_9" />
                        <ImageView
                            android:layout_width="214dp"
                            android:layout_height="162dp"
                            android:layout_marginLeft="6dp"
                            android:layout_marginTop="74dp"
                            android:src="@drawable/img6_10" />
                    </LinearLayout>
                </HorizontalScrollView>
                <Button
                    android:id="@+id/add_cos2"
                    android:layout_width="312dp"
                    android:layout_height="60dp"
                    android:layout_gravity="center|bottom"
                    android:background="@drawable/addbtn"
                    android:layout_marginBottom="26dp" />
            </FrameLayout>
        </LinearLayout>
    </ScrollView>

</LinearLayout>