<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    tools:context=".MainFragment">


    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scaleType="fitXY"
            android:src="@drawable/homeback"
            app:layout_constraintTop_toTopOf="parent"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="189dp"
            android:layout_marginLeft="24dp"
            android:text="여행을 준비 해 볼까요?"
            android:textSize="22dp"
            android:textStyle="bold"/>
    </FrameLayout>
    <FrameLayout
        android:id="@+id/layout_search_screen"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingHorizontal="24dp">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar_search"
            android:background="@drawable/serachback"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <FrameLayout
            android:id="@+id/field_search"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/img_search_icon"
                android:layout_width="21dp"
                android:layout_height="21dp"
                android:src="@drawable/search_icon"
                android:background="@android:color/transparent"
                android:layout_marginLeft="17dp"
                android:layout_marginTop="18dp"
                android:layout_gravity="left" />
            <EditText
                android:id="@+id/edit_search_text"
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:focusable="true"
                android:singleLine="true"
                android:hint="무슨 계절에 여행가시나요? 계절, 지역 검색하기"
                android:textSize="12dp"
                android:layout_marginLeft="47dp"
                android:layout_marginTop="20dp"
                android:background="@android:color/transparent" />
        </FrameLayout>
    </FrameLayout>

    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <ImageButton
                android:id="@+id/local_btn"
                android:layout_width="126dp"
                android:layout_height="126dp"
                android:background="@drawable/local_btn"
                android:layout_marginLeft="34dp"
                android:layout_marginTop="20dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="111dp"
                android:layout_marginLeft="69dp"
                android:text="지역 선택"
                android:textSize="14dp"
                android:textColor="#ffffff"/>
        </FrameLayout>

        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="40dp">

            <ImageButton
                android:id="@+id/season_btn"
                android:layout_width="126dp"
                android:layout_height="126dp"
                android:layout_gravity="right"
                android:layout_marginLeft="200dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/local_btn" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="235dp"
                android:layout_marginTop="111dp"
                android:text="계절 선택"
                android:textColor="#ffffff"
                android:textSize="14dp" />
        </FrameLayout>
    </FrameLayout>



</LinearLayout>